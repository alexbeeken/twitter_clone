<h1>All Tweets</h1>

<% if current_user %>
<h1>
<marquee scrollamount="10">
  <marquee direction="up" behavior="alternate" width=100% height=200 scrollamount="10">
    <%= link_to "New Tweet", new_tweet_path, id: "new_tweet", remote: true %>
  </marquee>
</marquee>
</h1>
<% end %>

  <% @tweets.each do |tweet| %>
  <div class="container">
      <marquee direction="up" width="200" height=<%= "#{200 + (tweet.words.length * 10)}" %> behavior="alternate" style="border:solid">
        <% tweet.words.each do |word| %>
          <marquee direction="right" behavior="alternate" heigth="200" scrolldelay="60" scrollamount="8"><%= word %></marquee>
        <% end %>
        <% if tweet.comments %>
          <% tweet.comments.each do |comment| %>
              <marquee direction="right"><%= comment.body %></marquee>
          <% end %>
        <% end %>
        <%= link_to "Create Comment", new_comment_path(tweet) %>
    </marquee>
  </div>
  <% end %>
